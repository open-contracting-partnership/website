<!DOCTYPE html>
<html lang="en" class="aigis-html">
	<head>

		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">

		<title>Style Guide</title>

		<!-- <script src="https://use.typekit.net/jaj0dkp.js"></script>
		<script>try{Typekit.load({ async: true });}catch(e){}</script> -->

		<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">

		<link href="<%- root %>dist/css/styles.css" rel="stylesheet">

		<link href="<%- root %>aigis_assets/styles/highlight/prism.css" rel="stylesheet">
		<link href="<%- root %>aigis_assets/dist/theme.css" rel="stylesheet">

	</head>
	<body class="aigis-body">

		<header class="aigis-header">

			<a href="<%- root %>index.html" class="aigis-header__logo">
				<img src="<%- root %>aigis_assets/images/bureau-shield.svg" alt="Website Logo">
			</a>

			<div class="aigis-header__navigation">

				<%- helper.renderCollectionTree('category') %>

				<ul class="aigis-header__sub-navigation">
					<li class="subtle">Select a category to continue&hellip;</li>
				</ul>

			</div>

			<div class="aigis-header__close">

				<svg class="aigis-header__close-cross" xmlns="http://www.w3.org/2000/svg" viewBox="1384 27 16 16">
					<path fill="#535353" fill-rule="evenodd" d="M1400 28.62l-1.62-1.62-6.38 6.38-6.38-6.38-1.62 1.62 6.38 6.38-6.38 6.38 1.62 1.62 6.38-6.38 6.38 6.38 1.62-1.62-6.38-6.38"/>
				</svg>

			</div>

		</header>

		<div class="aigis-container">

			<div class="aigis-contents__components">
				<%- include('components') %>
			</div>

			<div class="aigis-contents__preview">
			</div>

		</div>

		<img class="link-icon" src="<%- root %>aigis_assets/images/link.svg" alt="Link to single component view">

		<script>

			var ajax = new XMLHttpRequest();
			ajax.open('GET', '<%- root %>dist/svg/icons.svg', true);
			ajax.send();
			ajax.onload = function(e) {
				var div = document.createElement('div');
				div.style.display = 'none';
				div.style.visibility = 'hidden';
				div.innerHTML = ajax.responseText;
				document.body.insertBefore(div, document.body.childNodes[0]);
			}

		</script>

		<script src="<%- root %>aigis_assets/dist/styleguide.js"></script>
		<script src="<%- root %>dist/js/scripts.js"></script>

	</body>
</html>
