{% set options = { 'image_loading': 'lazy' } | merge(options) %}

<div class="card card--quote card--active">

	<div class="card__image">

		{{ imgix({
			src: card.image.url,
			params: {
				auto: 'format',
				fit: 'crop'
			},
			aspect_ratio: [2, 1],
			transforms: [{
				w: 300
			}, {
				w: 500
			}, {
				w: 600
			}, {
				w: 100
			}, {
				w: 1200
			}, {
				w: 1800
			}],
			sizes: '(min-width: 768px) 600px, (min-width: 600px) 500px, 300px',
			loading: options.image_loading
		}) }}

	</div>

	<blockquote class="card__quote">
		<p>{{ card.quotation }}</p>
		<footer>{{ card.name }},<br>{{ card.bio }}</footer>
	</blockquote>

	<div class="card__toggle-container">

		<button class="card__toggle / button--naked" aria-label="Toggle quote">
			<svg class=""><use xlink:href="#icon-plus-circle"></use></svg>
		</button>

	</div>

</div>
