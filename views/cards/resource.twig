{% if not options %}
	{% set options = [] %}
{% endif %}

{% set options = { 'colour_scheme': null } | merge(options) %}

<div class="card card--resource" data-post-type="{{ card.type }}" data-colour-scheme="{{ options.colour_scheme }}">

	<div class="card__body">
		<a class="card__link" href="{{ card.url }}">{{ card.title }}</a>
	</div>

	<div class="card__footer">
		<div class="card__icon"></div>
		<span class="card__type">{{ card.type_label }}</span>
	</div>

</div>
