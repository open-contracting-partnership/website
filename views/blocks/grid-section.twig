<div
	id="{{ options.id }}"
	class="block"
	data-block-type="grid-section"
	data-grid-layout="{{ block.layout }}"
	style="
		{% if block.text_colour %}
			--colour: {{ block.text_colour }}
		{% endif %}
	">

	<div class="block__background" style="background-color: {{ block.background_colour }}"></div>

	<div class="block__container">

		<div class="block__content [tw: space-y-3 ]">

			<h2 class="block__heading">{{ block.heading }}</h2>

			{% if block.strapline %}
				<p>{{ block.strapline }}</p>
			{% endif %}

		</div>

		<div class="block__grid">
			<InnerBlocks allowedBlocks="{{ block.allowed_inner_blocks }}" />
		</div>

	</div>

</div>
