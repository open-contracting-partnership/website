{% set options = { 'id': null } | merge(block.options) %}

<div id="{{ options.id }}" class="block" data-block-type="more-stories">

	<div class="block__background" style="background-color: {{ block.background_colour }}"></div>

	<div class="block__container" style="color: {{ block.text_colour }};">

		{% if block.title %}
			<h2 class="block__heading">{{ block.title }}</h2>
		{% endif %}

		<div class="block__stories">

			{% if block.card_type == 'default' %}

				{% for card in block.stories %}

					{% include 'cards/primary.twig' with {
						'card': card,
						'options': {
							'colour_scheme': block.card_options.colour_scheme
						}
					} %}

				{% endfor %}

			{% endif %}

			{% if block.card_type == 'resource' %}

				{% for card in block.stories %}

					{% include 'cards/resource.twig' with {
						'card': card,
						'options': {
							'colour_scheme': block.card_options.colour_scheme
						}
					} %}

				{% endfor %}

			{% endif %}

		</div> <!-- / .block__stories -->

	</div>

</div>
