<div class="block" data-block-type="content-with-sidebar" style="color: {{ block.text_colour }}">

	<div class="block__background" style="background-color: {{ block.background_colour }}"></div>

	<div class="block__content">

		<h2 class="block__heading">{{ block.title }}</h2>

		{{ block.content | raw }}

	</div>

	<div class="block__sidebar">

		{% if block.cta %}

			<div class="card card--link" data-colour-scheme="light">

				<div class="card__body">
					<a class="card__link" href="{{ block.cta.link.link }}">{{ block.cta.title }}</a>
				</div>

				<div class="card__footer">

					<a class="arrow-link" href="{{ block.cta.link.link }}" data-text-color="black">
						<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
						<span class="arrow-link__label">{{ block.cta.link.title }}</span>
					</a>

				</div>

			</div>

		{% endif %}

	</div>

</div>
