{% set options = { 'id': null, 'additional_classes': null } | merge(block.options) %}

<div id="{{ options.id }}" class="block {{ options.classes }}" data-block-type="content-with-sidebar" style="color: {{ block.text_colour }}" data-sidebar-width="{{ block.sidebar_width }}">

	<div class="block__background" style="background-color: {{ block.background_colour }}"></div>

	<div class="block__content">

		<h2 class="block__heading">{{ block.title }}</h2>

		{% for item in block.primary_content %}

			{% if item.acf_fc_layout == 'content' %}
				{{ item.content | raw }}
			{% endif %}

			{% if item.acf_fc_layout == 'arrow_links' %}

				<div class="block__arrow-links">

					{% for link in item.links %}

						<a class="arrow-link" href="{{ link.link.url }}" data-text-color="{{ block.is_dark ? 'white' : 'black' }}">
							<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
							<span class="arrow-link__label">{{ link.link.title }}</span>
						</a>

					{% endfor %}

				</div>

			{% endif %}

		{% endfor %}

	</div>

	<div class="block__sidebar" data-alignment="{{ options.sidebar_alignment }}">

		{% for item in block.sidebar_content %}

			{% if item.acf_fc_layout == 'link_box' %}

				<div class="card card--link" data-colour-scheme="light">

					<div class="card__body">
						<a class="card__link" href="{{ item.link.link }}">{{ item.title }}</a>
					</div>

					<div class="card__footer">

						<a class="arrow-link" href="{{ item.link.link }}" data-text-color="black">
							<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
							<span class="arrow-link__label">{{ item.link.title }}</span>
						</a>

					</div>

				</div>

			{% endif %}

			{% if item.acf_fc_layout == 'image' %}

				<div class="block__sidebar-image">

					{{ imgix({
						src: item.image.url,
						params: {
							auto: 'format'
						},
						transforms: [{
							w: 415
						}, {
							w: 830
						}, {
							w: 1024
						}, {
							w: 1536
						}, {
							w: 2048
						}],
						sizes: '100vw'
					}) }}

				</div>

			{% endif %}

			{% if item.acf_fc_layout == 'card' %}

				<div class="card card--link" data-colour-scheme="{{ item.colour_scheme }}">

					{% if item.title %}
						<h3 class="card__heading">{{ item.title }}</h3>
					{% endif %}

					{% if item.content %}

						<div class="card__body">
							{{ item.content | raw }}
						</div>

					{% endif %}

					{% if item.links %}

						<div class="card__footer">

							{% for link in item.links %}

								<a class="arrow-link" href="{{ link.link.link }}" data-text-color="black">
									<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
									<span class="arrow-link__label">{{ link.link.title }}</span>
								</a>

							{% endfor %}

						</div>

					{% endif %}

				</div>

			{% endif %}

		{% endfor %}

	</div>

</div>
