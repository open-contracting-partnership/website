<div class="block" data-block-type="resource">

	<div class="block__background" style="background-color: {{ block.background_colour }};"></div>

	<div class="block__container" style="color: {{ block.text_colour }};">

		<h2 class="block__heading">{{ block.title }}</h2>

		{% if block.content %}

			<div class="block__content">
				{{ block.content | raw }}
			</div>

		{% endif %}

		{% if block.sidebar_links %}

			<div class="block__links">

				{% for link in block.sidebar_links %}

					<div class="card card--link" data-colour-scheme="transparent">

						<div class="card__body">
							<a class="card__link" href="{{ link.link }}">{{ link.title }}</a>
						</div>

						<div class="card__footer">

							<a class="arrow-link" href="{{ link.link }}" data-icon-color="white" data-text-color="black">
								<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
								<span class="arrow-link__label">More</span>
							</a>

						</div>

					</div>

				{% endfor %}

			</div>

		{% endif %}

		{% if block.resources_title %}
			<h2 class="block__sub-heading">{{ block.resources_title }}</h2>
		{% endif %}

		<div class="block__resources">

			<div class="card card--resource" data-highlight-colour="orange">

				<div class="card__body">
					<a class="card__link" href="#">How we successfully pushed for more transparent public procurement rules in Spain</a>
				</div>

				<div class="card__footer">
					<div class="card__icon"></div>
					<span class="card__type">Resource</span>
				</div>

			</div>

			<div class="card card--resource" data-highlight-colour="orange">

				<div class="card__body">
