<div class="block" data-block-type="stories">

	<div class="block__background" style="background-color: {{ block.background_colour }}"></div>

	<div class="block__container" style="color: {{ block.text_colour }};">

		<div class="block__header">

			<h1 class="block__heading">{{ block.primary_title }}</h1>

			{% for link in block.primary_links %}

				<a class="arrow-link" href="{{ link.url }}">
					<svg class="arrow-link__icon"><use xlink:href="#icon-arrow-circle"></use></svg>
					<span class="arrow-link__label">{{ link.title }}</span>
				</a>

			{% endfor %}

		</div>

		{% if block.primary_content %}

			<div class="block__content">
				{{ block.primary_content | raw }}
			</div>

		{% endif %}

